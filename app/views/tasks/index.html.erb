<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task|  %>
  <li><%= task.title %></li>
  <li><%= task.completed %></li>
  <%= link_to task.title, task_path(task.id) %>
  <%= link_to "Delete #{task.title}",
    task_path(task),
    method: :delete,
    data: { confirm: "Are you sure?"} %>
  <% end %>
</ul>

<%= link_to "Create a new task", new_task_path %>
